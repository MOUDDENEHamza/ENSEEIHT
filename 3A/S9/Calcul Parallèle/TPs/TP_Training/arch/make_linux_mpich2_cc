LDFLAGS_TP2     =
CFLAGS_TP3      = 
LDFLAGS_TP3     =
CFLAGS_TP4      = 
LDFLAGS_TP4     =
CFLAGS_TP5      = 
LDFLAGS_TP5     =
CFLAGS_TP6      = 
LDFLAGS_TP6     =
CFLAGS_TP7      = 
LDFLAGS_TP7     =
LDCFLAGS        = -lX11
