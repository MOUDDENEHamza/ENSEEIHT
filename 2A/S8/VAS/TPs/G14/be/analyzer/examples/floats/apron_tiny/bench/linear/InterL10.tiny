real x, y; 
x = rand_real(-1.,1.);
if (x>=0.) {
y = 10.*x; 
}
else {
if (x>=-1./10.) 
	y = 11.000000*x; 
	else 
	if (x>=-2./10.) 
	y = 12.000000*x; 
	else 
	if (x>=-3./10.) 
	y = 13.000000*x; 
	else 
	if (x>=-4./10.)  
	y = 14.000000*x; 
	else 
	if (x>=-5./10.) 
	y = 15.000000*x; 
	else 
	if (x>=-6./10.)
	y = 16.000000*x; 
	else 
	if (x>=-7./10.) 
	y = 17.000000*x; 
	else 
	if (x>=-8./10.) 
	y = 18.000000*x; 
	else 
	if (x>=-9./10.) 
	y = 19.000000*x; 
	else 
	y = 20.*x;
}
/*assume y == 1;*/
